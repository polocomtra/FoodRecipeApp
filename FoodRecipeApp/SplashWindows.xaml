<Window x:Class="FoodRecipeApp.SplashWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodRecipeApp"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None"
        Title="SplashWindows" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/Splash.jpg" />
    </Window.Background>
    <Canvas>
        <TextBlock Name="FoodInformation" Canvas.Left="351" TextWrapping="Wrap" MaxWidth="400" Canvas.Top="94" Height="165" Width="400"></TextBlock>
        <CheckBox Checked="DontShowThisAgain" Unchecked="ShowThisAgain" Canvas.Left="654" Canvas.Top="385">Don't show this again</CheckBox>
        <Button Content="OK" Click="CloseSplashWindowBtn" Name="SplashOKBtn" Width="100" Canvas.Left="690" Canvas.Top="408" ></Button>
    </Canvas>
</Window>
